class Solution {
public:
    int solve(int i,int curr_sum,vector<int>& nums, int target){
        if(i==nums.size()){
             if(curr_sum==target) return 1;
             else return 0;
        }
        int plus=solve(i+1,curr_sum+nums[i],nums,target);
        int minus=solve(i+1,curr_sum-nums[i],nums,target);
        return plus+minus;
    }
    int findTargetSumWays(vector<int>& nums, int target) {
        return solve(0,0,nums,target);
    }
};
