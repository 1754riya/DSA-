class Solution {
public:
    bool checkIfPangram(string sentence) {
        vector<int>arr(26,0);
        int ct=0;
        for(char & ch:sentence){
            int index=ch-'a';
            if(arr[index]==0){
                ct++;
                arr[index]++;
            }
            if (ct == 26) return true;
        }
        return false;
        }
};
