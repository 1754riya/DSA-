class Solution {
  public:
    bool twoSum(vector<int>& arr, int target) {
      map<int, int> mpp;
        for (int i = 0; i < arr.size(); i++) {
            int complement = target - arr[i];
            if (mpp.find(complement) != mpp.end()) {
                return true;
            }
            mpp[arr[i]] = i;
        }
        return false; 
    }
};
