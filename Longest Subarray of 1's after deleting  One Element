class Solution {
public:
    int longestSubarray(vector<int>& nums) {
         int maxLen = 0, zeros = 0;
        int left = 0;
        for (int right = 0; right < nums.size(); ++right) {
            if (nums[right] == 0)
                ++zeros;
            while (zeros > 1) {
                if (nums[left++] == 0)
                    --zeros;
            }
            maxLen = max(maxLen, right - left);
        }
        return maxLen;
    }
};
