class Solution {
public:
    int solve(int i, int j,int n, int m){
        if(i>=m|| j>=n) return 0;
        if(i==m-1 && j==n-1) return 1;
        int right=solve(i,j+1,n,m);
        int down=solve(i+1,j,n,m);
        return right+down;
    }
    int uniquePaths(int m, int n) {
        return solve(0,0,m,n);
    }
};
