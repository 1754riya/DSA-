
class Solution {
public:
     int dfs(TreeNode*root,int &diameter){
        if(!root) return 0;
        int lh=dfs(root->left,diameter);
        int rh=dfs(root->right,diameter);
        diameter=max(diameter,lh+rh);
        return 1+max(lh,rh);

    }
    int diameterOfBinaryTree(TreeNode* root) {
        int diameter =0;
        dfs(root,diameter);
        return diameter;
    }
};
