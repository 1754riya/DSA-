
class Solution {
public:
    bool isBalanced(TreeNode* root) {
        return dfs(root)!=-1;
    }
    int dfs(TreeNode*root){
        if(root==NULL) return 0;
        int lh=dfs(root->left);
        if(lh==-1) return -1;
        int rh=dfs(root->right);
        if(rh==-1) return -1;
        if(lh==-1|| rh==-1) return -1;
        if(abs(rh-lh)>1) return -1;
        return 1+max(lh,rh);
    }
};
