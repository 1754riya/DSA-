/*
class Node {
  public:
    int data;
    Node* left;
    Node* right;

    Node(int x) {
        data = x;
        left = nullptr;
        right = nullptr;
    }
};
*/

class Solution {
  public:
    void inorder(Node*root,vector<int>&num){
         if(root==nullptr) return;
         inorder(root->left,num);
         num.push_back(root->data);
         inorder(root->right,num);
    }
    int minValue(Node* root) {
        vector<int>num;
        inorder(root,num);
        return num[0];
        
    }
};
