class Solution {
public:
    bool dfs(int node, vector<int>& visited, vector<int>& pathvis, vector<vector<int>>& edges) {
        visited[node] = 1;
        pathvis[node] = 1;
        for (auto it : edges[node]) {
            if (!visited[it]) {
                if (dfs(it, visited, pathvis, edges)) {
                    return true;
                }
            }
            else if (pathvis[it]) {
                return true;
            }
        }
        
        pathvis[node] = 0;  // backtrack
        return false;
    }

    bool isCyclic(int V, vector<vector<int>>& edges) {
        vector<int> visited(V, 0);
        vector<int> pathvis(V, 0);

        for (int i = 0; i < V; i++) {
            if (!visited[i]) {
                if (dfs(i, visited, pathvis, edges)) {
                    return true;   // proper closing brace
                }
            }
        }

        return false;
    }
};
