class Solution {
public:
    const int MOD = 1e9 + 7;
    double myPow(double x, int n) {
        long long N=n;
        if(N<0){
            x=1/x;
            N=-N;
        }

        if(N==0) return 1;
        double half=myPow(x,N/2);
        double result=half*half;
        if(N%2==1){
            result=(result*x);
        }
        return result;
    }
};
