
class Solution {
  public:
    void dfs(Node*root, int level,vector<int>&result){
        if(root==NULL) return;
        if(result.size()==level){
            result.push_back(root->data);
        }
        dfs(root->left,level+1,result);
        dfs(root->right,level+1,result);
    }
    vector<int> leftView(Node *root) {
        vector<int>result;
        dfs(root,0,result);
        return result;
    }
};
