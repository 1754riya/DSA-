class Solution {
public:
   bool isvowel(char ch) {
        ch = tolower(ch);
        return (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u');
    }
    bool halvesAreAlike(string s) {
     int n=s.size();
      int i=0;
      int j=n/2;
      int ctRight=0;
      int ctLeft = 0;
      while(i<n/2 && j<n){
        if(isvowel(s[i]))ctRight++;
        if(isvowel(s[j])) ctLeft++;
        i++;
        j++;
      }
     return ctLeft == ctRight;
    }
};
